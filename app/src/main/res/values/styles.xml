<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Tema aplikasi -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/backgroundColor</item>
    </style>

    <!-- Gaya tombol utama -->
    <style name="ButtonPrimary">
        <item name="android:background">@drawable/bg_button_primary</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">12dp</item>
    </style>

    <!-- Gaya input teks -->
    <style name="EditTextStyle">
        <item name="android:background">@drawable/bg_input_rounded</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">12dp</item>
    </style>

    <!-- Gaya judul teks -->
    <style name="TitleTextStyle">
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Gaya teks biasa -->
    <style name="BodyTextStyle">
        <item name="android:textColor">@color/textColorSecondary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Gaya untuk notifikasi atau error -->
    <style name="ErrorTextStyle">
        <item name="android:textColor">@color/colorError</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">italic</item>
    </style>

</resources>
